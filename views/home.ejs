                    opacity=".5" class="shape-fill"></path>
                <path
                    d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"
                    class="shape-fill"></path>
            </svg>
        </div>

    </div>

    <div style="margin-top: 50px;">
        <p class="text-center text-dark">Designed & Developed by, <a href="/error"><b class="text-dark">Darshan Babariya</b></p></a>

    </div>

    <script>
        const curDateDay = document.getElementById("date");


        const getcurrent = () => {

            var days = new Array(7);
            days[0] = "SUN";
            days[1] = "MON";
            days[2] = "TUE";
            days[3] = "WED";
            days[4] = "THU";
            days[5] = "FRI";
            days[6] = "SAT";

            var month = new Array(12);
            month[0] = "JAN";
            month[1] = "FEB";
            month[2] = "MAR";
            month[3] = "APR";
            month[4] = "MAY";
            month[5] = "JUN";
            month[6] = "JLY";
            month[7] = "AUG";
            month[8] = "SPT";
            month[9] = "OCT";
            month[10] = "NOV";
            month[11] = "DEC";

            let currentTime = new Date();
            var curday = days[currentTime.getDay()];
            var curdate = currentTime.getDate();
            var curmonth = month[currentTime.getMonth()];
            var curyear = currentTime.getFullYear();
            var curtime = currentTime.getHours() + " : " + currentTime.getMinutes();

            console.log(curday + " , " + curdate + " , " + curmonth + " , " + curyear);
            curDateDay.innerHTML = curday + " | " + curdate + " " + curmonth + " " + curyear + " | " + curtime;
        }
        getcurrent();
    </script>

